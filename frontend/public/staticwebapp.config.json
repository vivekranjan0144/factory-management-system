{
  "navigationFallback": {
    "rewrite": "/index.html",  // This ensures that any route that doesnâ€™t correspond to a static file will be rewritten to /index.html
    "exclude": [
      "/*.{css,scss,js,png,jpg,gif,ico,svg}",  // Static assets like images, stylesheets, etc.
      "/api/*"  // If you have API routes, they will be excluded from the fallback
    ]
  },
  "routes": [
    {
      "route": "/login",
      "serve": "/login.html"  // Serve a custom login page if needed
    },
    {
      "route": "/404",
      "serve": "/404.html"  // Serve a custom 404 page for unknown routes
    }
  ],
  "platformErrorOverrides": [
    {
      "errorType": "NotFound",
      "serve": "/index.html"  // Ensure that any 404 error is redirected to /index.html
    }
  ]
}
